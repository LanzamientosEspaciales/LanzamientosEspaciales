<style>
  /* Carga de fuentes */
  @font-face {
    font-family: "Erbaum";
    src: url("/fonts/Erbaum-Regular.ttf") format("truetype");
    font-weight: normal;
  }
  @font-face {
    font-family: "Erbaum";
    src: url("/fonts/Erbaum-Bold.ttf") format("truetype");
    font-weight: bold;
  }

  /* Sección lanzamientos */
  .launches {
    padding: 2rem;
    text-align: center;
  }

  .launches h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #fff;
  }

  /* Lista de lanzamientos */
  .launch-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
    gap: 1rem;
  }

  /* Boton ver calendario */
  .custom-btn {
    width: 300px;
    height: 50px;
    color: #fff;
    border-radius: 5px;
    padding: 1px 5px;
    font-family: "Erbaum", sans-serif;
    font-weight: 500;
    font-size: 1rem;
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
    border-color: #fff;
    outline: none;
    margin: 20px;
    z-index: 4;
  }

  .btn-14 {
    background: rgba(255, 255, 255, 0);
    z-index: 1;
    border: 1px solid #fff;
    left: 50%;
    transform: translateX(-50%);
  }

  .btn-14:after {
    position: absolute;
    content: "";
    width: 100%;
    height: 0;
    top: 0;
    left: 0;
    z-index: -1;
    border-radius: 5px;
    background-color: #fff;
    transition: all 0.3s ease;
  }
  .btn-14:hover {
    color: #000;
  }
  .btn-14:hover:after {
    top: auto;
    bottom: 0;
    height: 100%;
  }
  .btn-14:active {
    top: 2px;
  }

  /* Sección del canal de YT */
  .latest-videos {
    padding: 3rem;
    background-color: rgba(0, 0, 52, 0.4);
    text-align: center;
  }

  .latest-videos h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: white;
  }

  .videos-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
    gap: 2rem;
  }

  .video-card {
    background: rgba(0, 0, 0, 0.4);
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 1rem;
    text-align: center;
  }

  .video-card iframe {
    width: 100%;
    height: 300px;
    border-radius: 8px;
    aspect-ratio: 16/9;
  }

  .video-card .video-title {
    font-size: 1.2rem;
    margin-top: 0.8rem;
    color: white;
  }
</style>
