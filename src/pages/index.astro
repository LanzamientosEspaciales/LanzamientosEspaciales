---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";

import launchCardStyle from "../styles/launch_card.scss";

import imgLogoHorizontalBlack from "../images/Logo horizontal black.png";

import imgStarship from "../images/Cohetes/Starship.jpg";
import imgLongMarch2D from "../images/Cohetes/Long March 2D.jpeg";
import imgFalcon9SLC4E from "../images/Cohetes/Falcon 9 SLC-4E.jpg";
import imgFalcon9LC39A from "../images/Cohetes/Falcon 9 LC-39A.jpg";
import imgFalcon9SLC40 from "../images/Cohetes/Falcon 9 SLC-40.jpg";

import imgStarshipFlight7 from "../images/fotos/Starship Flight 7.jpg";
import imgStarshipFlight7WDR from "../images/fotos/Starship Flight 7 WDR.jpg";

import LaunchCard from "../components/LaunchCard.astro";
---

<Layout>
  <Header />
  <Hero />
  <main>
    <!-- Contenido principal -->
    <section class="launches">
      <h2>Próximos Lanzamientos</h2>
      <div class="launch-list">
        <LaunchCard
          missionName="Starship Vuelo 7"
          date="16 de enero, 2025"
          time="22:00 - 23:00 UTC"
          vehicle="Starship"
          site="OLP-A, Starbase, Texas"
          img={imgStarshipFlight7}
        />

        <LaunchCard
          missionName="Desconocido"
          date="17 de enero, 2025"
          time="04:10 UTC"
          vehicle="Long March 2D"
          site="Centro de Lanzamiento de Satélites de Jiuquan, China"
          img={imgLongMarch2D}
        />

        <LaunchCard
          missionName="Starlink 11-8"
          date="18 de enero, 2025"
          time="15:57 UTC"
          vehicle="Falcon 9 Block 5"
          site="SLC-4E, Vandenberg, California"
          img={imgFalcon9SLC4E}
        />

        <LaunchCard
          missionName="Starlink 13-1"
          date="21 de enero, 2025"
          time="05:13 UTC"
          vehicle="Falcon 9 Block 5"
          site="LC-39A, Centro Espacial Kennedy, Florida"
          img={imgFalcon9LC39A}
        />

        <LaunchCard
          missionName="Starlink 11-6"
          date="22 de enero, 2025"
          time="14:38 UTC"
          vehicle="Falcon 9 Block 5"
          site="SLC-4E, Vandenberg, California"
          img={imgFalcon9SLC4E}
        />

        <LaunchCard
          missionName="Starlink 10-12"
          date="24 de enero, 2025"
          time="22:45 UTC"
          vehicle="Falcon 9 Block 5"
          site="SLC-40, Cabo Cañaveral, Florida"
          img={imgFalcon9SLC40}
        />
      </div>
    </section>
    <button class="custom-btn btn-14">Ver calendario</button>
  </main>

  <div class="separador"></div>

  <section class="latest-videos">
    <h2>Últimos Videos/Directos</h2>
    <div class="videos-container">
      <!-- Video 1 -->
      <div class="video-card">
        <iframe
          src="https://www.youtube.com/embed/n8PIoMhjayc"
          frameborder="0"
          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
