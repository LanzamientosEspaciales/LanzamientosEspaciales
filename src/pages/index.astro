---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Launches from "../components/Launches/Launches.astro";
import VideosSection from "../components/Videos/VideosSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />
  <Hero />
  <Launches />
  <VideosSection />
  <Footer />
</Layout>

<style>
  /* Carga de fuentes */
  @font-face {
    font-family: "Erbaum";
    src: url("/fonts/Erbaum-Regular.ttf") format("truetype");
    font-weight: normal;
  }
  @font-face {
    font-family: "Erbaum";
    src: url("/fonts/Erbaum-Bold.ttf") format("truetype");
    font-weight: bold;
  }

  /* Estilo general */
  body {
    font-family: "Erbaum", sans-serif;
    background-color: #000;
    color: #fff;
  }
</style>
