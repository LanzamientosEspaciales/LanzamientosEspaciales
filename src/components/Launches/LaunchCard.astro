---
import { Image } from "astro:assets";
import lauchCardStyle from "../styles/lauch_card.scss";
import imgStarshipFlight7 from "../images/fotos/Starship Flight 7.jpg";
import type { ImageMetadata } from "astro";

interface Props {
  missionName: string;
  date: string;
  time: string;
  vehicle: string;
  site: string;
  img: ImageMetadata;
}

const { missionName, date, time, vehicle, site, img } = Astro.props;
---

<div class="launch-card {props.important ? 'important' : ''}">
  <div class="launch-details">
    <h3 class="launch-mission-name">{missionName}</h3>
    <p class="launch-date-time">
      <strong>Fecha: </strong>{date}
      <br />
      <strong>Hora:</strong>
      {time}
    </p>
    <p class="launch-vehicle">
      <strong>Vehículo: </strong>{vehicle}
    </p>
    <p class="launch-site">
      <strong>Lugar: </strong>{site}
    </p>
  </div>
  <Image src={img} alt={missionName} class="launch-image" />

  <a href="#" class="btn-ver-mas"> Ver más </a>
</div>

<style>
  .launch-card {
    background: #222;
    padding: 1.5rem;
    margin: 1.5rem auto;
    width: 80%;
    max-width: 700px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease-in-out;
    color: #fff;
    overflow: hidden;
    transition: all 0.25s;
    z-index: 3;
  }

  /* Sombra naranja para lanzamientos importantes */
  .launch-card.importante {
    box-shadow: 0 0 10px 3px rgba(255, 165, 0, 0.5); /* Sombra naranja con difuminado */
    background: #333; /* Un fondo más oscuro para los lanzamientos importantes */
  }

  /* Detalles del lanzamiento */
  .launch-card .launch-details {
    padding: 1rem 0;
    text-align: left;
  }

  .launch-card .launch-mission-name {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 0.8rem;
    color: #c1272d; /* Rojo similar al de SpaceX */
    text-align: center;
  }

  .launch-card .launch-date-time {
    font-size: 1.1rem;
    margin-bottom: 0.6rem;
    color: #aaa; /* Gris para las fechas */
  }

  .launch-card .launch-vehicle {
    font-size: 1.1rem;
    margin-bottom: 0.6rem;
    color: #aaa; /* Gris para las fechas */
  }

  /* Imagen del vehículo */
  .launch-card img {
    width: 100%;
    height: 200px; /* Ajusta la altura según lo que necesites */
    object-fit: cover; /* Asegura que la imagen se recorte y mantenga su proporción */
    border-radius: 10px;
    margin-top: 1rem;
    aspect-ratio: 16/9;
    padding-bottom: 25px;
  }

  /* Estilo del botón "Ver más" */
  .launch-card .btn-ver-mas {
    display: inline-block;
    background-color: #c1272d; /* Rojo SpaceX */
    color: #fff;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.6rem 1.5rem;
    border-radius: 30px; /* Bordes redondeados */
    text-decoration: none;
    text-align: center;
    margin-top: 1rem;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  }

  /* Efecto hover para el botón */
  .launch-card .btn-ver-mas:hover {
    background-color: #a61e22; /* Rojo más oscuro para el hover */
    transform: scale(1.05); /* Le da un efecto de agrandado */
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
  }

  /* Efecto de foco */
  .launch-card .btn-ver-mas:focus {
    outline: none;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
  }
</style>
