---
import { Image } from "astro:assets";
import lauchCardStyle from "../styles/lauch_card.scss";
import imgStarshipFlight7 from "../images/fotos/Starship Flight 7.jpg";
import type { ImageMetadata } from "astro";

const { missionName, date, time, vehicle, site, img } = Astro.props;
---

<div class="launch-card {props.important ? 'important' : ''}">
  <div class="launch-details">
    <h3 class="launch-mission-name">{missionName}</h3>
    <p class="launch-date-time">
      <strong>Fecha: </strong>{date}
      <br />
      <strong>Hora:</strong>
      {time}
    </p>
    <p class="launch-vehicle">
      <strong>Vehículo: </strong>{vehicle}
    </p>
    <p class="launch-site">
      <strong>Lugar: </strong>{site}
    </p>
  </div>
  <Image src={img} alt={missionName} class="launch-image" />

  <a href="#" class="btn-ver-mas"> Ver más </a>
</div>

<style>
  .launch-card {
    background: #222;
    padding: 1.5rem;
    margin: 1.5rem auto;
    width: 80%;
    max-width: 700px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease-in-out;
    color: #fff;
    overflow: hidden;
    transition: all 0.25s;
    z-index: 3;

    .importante {
      box-shadow: 0 0 10px 3px rgba(255, 165, 0, 0.5);
      background: #333;
    }

    .launch-details {
      padding: 1rem 0;
      text-align: left;
    }

    .launch-mission-name {
      font-size: 1.8rem;
      font-weight: bold;
      margin-bottom: 0.8rem;
      color: #c1272d; /* Rojo similar al de SpaceX */
      text-align: center;
    }

    .launch-date-time {
      font-size: 1.1rem;
      margin-bottom: 0.6rem;
      color: #aaa; /* Gris para las fechas */
    }

    .launch-vehicle {
      font-size: 1.1rem;
      margin-bottom: 0.6rem;
      color: #aaa; /* Gris para las fechas */
    }

    img {
      width: 100%;
      height: 200px; /* Ajusta la altura según lo que necesites */
      object-fit: cover; /* Asegura que la imagen se recorte y mantenga su proporción */
      border-radius: 10px;
      margin-top: 1rem;
      aspect-ratio: 16/9;
      padding-bottom: 25px;
    }
    .btn-ver-mas {
      display: inline-block;
      background-color: #c1272d; /* Rojo SpaceX */
      color: #fff;
      font-size: 1rem;
      font-weight: 600;
      padding: 0.6rem 1.5rem;
      border-radius: 30px; /* Bordes redondeados */
      text-decoration: none;
      text-align: center;
      margin-top: 1rem;
      transition: all 0.3s ease-in-out;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);

      &:hover {
        background-color: #a61e22;
        transform: scale(1.05);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
      }

      &:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
      }
    }
  }
</style>
