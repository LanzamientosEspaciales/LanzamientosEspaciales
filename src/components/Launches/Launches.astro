---
import imgLongMarch2D from "../../images/Cohetes/Long March 2D.jpeg";
import imgFalcon9SLC4E from "../../images/Cohetes/Falcon 9 SLC-4E.jpg";
import imgStarshipFlight7 from "../../images/fotos/Starship Flight 7.webp";

import { type LaunchType } from "./LaunchType";
import LaunchCard from "./LaunchCard.svelte";

const launches: Array<LaunchType> = [
  {
    missionName: "Starship Vuelo 7",
    date: "16 de enero, 2025",
    time: "22:00 - 23:00 UTC",
    vehicle: "Starship",
    site: "OLP-A, Starbase, Texas",
    img: imgStarshipFlight7.src,
    important: true,
  },
  {
    missionName: "Desconocido",
    date: "17 de enero, 2025",
    time: "04:10 UTC",
    vehicle: "Long March 2D",
    site: "Centro de Lanzamiento de Satélites de Jiuquan, China",
    img: imgLongMarch2D.src,
  },
  {
    missionName: "Starlink 11-8",
    date: "18 de enero, 2025",
    time: "15:57 UTC",
    vehicle: "Falcon 9 Block 5",
    site: "SLC-4E, Vandenberg, California",
    img: imgFalcon9SLC4E.src,
  },
];
---

<section id="launches" class="border-section">
  <h2>Próximos Lanzamientos</h2>
  <div class="launch-list">
    {
      launches.map((launch) => (
        <LaunchCard
          missionName={launch.missionName}
          date={launch.date}
          time={launch.time}
          vehicle={launch.vehicle}
          site={launch.site}
          img={launch.img}
          important={launch.important}
        />
      ))
    }
  </div>
</section>

<style type="scss">
  #launches {
    padding: 2rem;
    text-align: center;
    h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
  }

  .launch-list {
    display: flex;
    flex-direction: row;
    gap: 4rem;
    padding: 0 12rem;
  }
</style>
