---
import imgLongMarch2D from "../../images/Cohetes/Long March 2D.jpeg";
import imgFalcon9SLC4E from "../../images/Cohetes/Falcon 9 SLC-4E.jpg";
import imgStarshipFlight7 from "../../images/fotos/Starship Flight 7.webp";

import LaunchCard from "./LaunchCard.astro";

interface Launch {
  missionName: string;
  date: string;
  time: string;
  vehicle: string;
  site: string;
  img: ImageMetadata;
  important?: boolean;
}

const launches: Array<Launch> = [
  {
    missionName: "Starship Vuelo 7",
    date: "16 de enero, 2025",
    time: "22:00 - 23:00 UTC",
    vehicle: "Starship",
    site: "OLP-A, Starbase, Texas",
    img: imgStarshipFlight7,
    important: true,
  },
  {
    missionName: "Desconocido",
    date: "17 de enero, 2025",
    time: "04:10 UTC",
    vehicle: "Long March 2D",
    site: "Centro de Lanzamiento de Satélites de Jiuquan, China",
    img: imgLongMarch2D,
  },
  {
    missionName: "Starlink 11-8",
    date: "18 de enero, 2025",
    time: "15:57 UTC",
    vehicle: "Falcon 9 Block 5",
    site: "SLC-4E, Vandenberg, California",
    img: imgFalcon9SLC4E,
  },
];
---

<!-- Contenido principal -->
<section class="launches">
  <h2>Próximos Lanzamientos</h2>
  <div class="launch-list">
    {
      launches.map((launch) => (
        <LaunchCard
          missionName={launch.missionName}
          date={launch.date}
          time={launch.time}
          vehicle={launch.vehicle}
          site={launch.site}
          img={launch.img}
          important={launch.important}
        />
      ))
    }
  </div>
</section>
<button class="custom-btn btn-14">Ver calendario</button>

<style type="scss">
  /* Sección lanzamientos */
  .launches {
    padding: 2rem;
    text-align: center;
    h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #fff;
    }
  }

  /* Lista de lanzamientos */
  .launch-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
    gap: 1rem;
  }

  /* Boton ver calendario */
  .custom-btn {
    width: 300px;
    height: 50px;
    color: #fff;
    border-radius: 5px;
    padding: 1px 5px;
    font-family: "Erbaum", sans-serif;
    font-weight: 500;
    font-size: 1rem;
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
    border-color: #fff;
    outline: none;
    margin: 20px;
    z-index: 4;
  }

  .btn-14 {
    background: rgba(255, 255, 255, 0);
    z-index: 1;
    border: 1px solid #fff;
    left: 50%;
    transform: translateX(-50%);

    &::after {
      position: absolute;
      content: "";
      width: 100%;
      height: 0;
      top: 0;
      left: 0;
      z-index: -1;
      border-radius: 5px;
      background-color: #fff;
      transition: all 0.3s ease;
    }

    &:hover::after {
      top: auto;
      bottom: 0;
      height: 100%;
    }

    &:hover::after:active {
      top: 2px;
    }

    &:hover {
      color: #000;
    }
  }
</style>
