---
import { Image } from "astro:assets";
import imgLogoHorizontalWhite from "../images/Logo horizontal white.png";
---

<header class="main-header">
  <div class="container">
    <a href="index.html" class="logo">
      <Image src={imgLogoHorizontalWhite} alt="Lanzamientos Espaciales" />
    </a>
    <nav class="nav-menu">
      <ul>
        <li><a href="index.html">Inicio</a></li>
        <li><a href="calendario.html">Calendario</a></li>
        <li><a href="noticias.html">Noticias</a></li>
        <li><a href="sobre-nosotros.html">Sobre Nosotros</a></li>
        <li><a href="contacto.html">Contacto</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header.main-header {
    background-color: #111;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.7);
  }

  header.main-header .logo img {
    height: 50px;
    max-width: 100%;
    display: block;
  }

  /* Estilos para el menú superior, alineado a la derecha */
  header.main-header .nav-menu {
    margin: 0;
    position: absolute;
    top: 50%;
    right: 1rem; /* Ajuste del espacio desde el borde derecho */
    transform: translateY(-50%); /* Centra verticalmente el menú */
  }

  header.main-header .nav-menu ul {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  header.main-header .nav-menu ul li a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    transition: background-color 0.3s;
  }

  header.main-header .nav-menu ul li a:hover {
    background-color: #444;
    border-radius: 5px;
  }
</style>
