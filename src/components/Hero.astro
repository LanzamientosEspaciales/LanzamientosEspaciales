---
import imgPortada from "../images/Portada.png";
const imgPortadaSrc = `url(${imgPortada.src})`;
---

<!-- Hero principal -->
<section class="hero">
  <div class="hero-content">
    <h1>Lanzamientos Espaciales</h1>
    <p>Descubre los próximos lanzamientos y noticias del espacio.</p>
  </div>
</section>

<style define:vars={{ imgPortadaSrc }}>
  /* Hero principal */
  .hero {
    position: relative;
    background: var(--imgPortadaSrc) no-repeat center center/cover;
    height: 80vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: #fff;
  }

  /* Crear separadores */

  .separador {
    width: 100%;
    height: 10px;
    background-color: #000034;
    filter: blur(10px);
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit; /* Hereda el fondo */
    filter: blur(10px); /* Aplica el desenfoque */
    z-index: -1; /* Asegura que el filtro esté detrás del contenido */
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: bold;
    margin: 0;
  }

  .hero p {
    font-size: 1.5rem;
    font-weight: 300;
    margin: 0.5rem 0 0;
  }
</style>
