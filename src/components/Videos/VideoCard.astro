---
import { YouTube } from "@astro-community/astro-embed-youtube";

interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<div class="video-card">
  <YouTube id={id} />
  <p class="video-title">{title}</p>
</div>

<style type="scss">
  .video-card {
    background-color: var(--navy-blue);
    border-radius: 1rem;
    box-shadow: 0px 0px 4px var(--cerulean-blue);
    padding: 1rem;
    text-align: center;
    .video-title {
      font-size: 1.2rem;
      font-weight: 600;
      margin-top: 1rem;
      margin-bottom: 0;
      color: white;
    }

    lite-youtube {
      border-radius: calc(1rem / 2);
    }
  }
</style>
