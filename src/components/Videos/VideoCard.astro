---
import { YouTube } from "@astro-community/astro-embed-youtube";

const { id, title } = Astro.props;
---

<div class="video-card">
  <YouTube id={id} />
  <p class="video-title">{title}</p>
</div>

<style type="scss">
  .video-card {
    background: rgba(0, 0, 0, 0.4);
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 1rem;
    text-align: center;
      .video-title {
        font-size: 1.2rem;
        margin-top: 0.8rem;
        color: white;
      }
  }

  .video-card .
</style>
