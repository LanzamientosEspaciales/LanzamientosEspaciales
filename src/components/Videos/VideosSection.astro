---
import { type Video } from "./VideoType";
import VideoCard from "./VideoCard.astro";

const videos: Video[] = [
  { id: "n8PIoMhjayc", title: "Starship vuelo 7" },
  { id: "20dGFUXr2bU", title: "New Glenn" },
  { id: "0NUNmnkM9Vw", title: "Transporter-12" },
];
---

<section id="latest-videos" class="border-section">
  <h2>Últimos Videos/Directos</h2>
  <div class="videos-container">
    {
      videos.map((video: Video) => (
        <VideoCard id={video.id} title={video.title} />
      ))
    }
  </div>
</section>

<style type="scss">
  /* Sección del canal de YT */
  #latest-videos {
    padding: 3rem;
    text-align: center;

    h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }

  .videos-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
    gap: 2rem;
  }
</style>
